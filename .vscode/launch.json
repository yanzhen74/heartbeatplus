{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Heartbeat Server",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/heartbeat.exe",
            "args": ["server", "tcp://*:6969"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "Debug Heartbeat Client",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/heartbeat.exe",
            "args": ["client", "tcp://localhost:6969", "test_client"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "Debug Heartbeat Both",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/heartbeat.exe",
            "args": ["server", "tcp://*:6969"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        }
    ]
}